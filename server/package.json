{
  "name": "server",
  "version": "1.0.0",
  "main": "./src/index.js",
  "scripts": {
    "build": "rimraf dist/ && babel ./src --out-dir dist/",
    "start": "npm run build && node dist/index.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "rimraf": "^2.6.2",
    "sequelize": "^4.41.0",
    "sqlite3": "^4.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "prettier": "1.14.3",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --single-quote --trailing-comma --write",
      "git add"
    ]
  }
}
